<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#6E8F00"
        android:gravity="center">

        <android.support.v7.widget.Toolbar
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:navigationIcon="@drawable/ic_arrow_back_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="Profile"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Edit"
            android:textColor="#fff"
            android:textSize="18dp"
            android:gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/userHeader"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#6E8F00"
        android:layout_below="@id/toolbarLayout">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ally Tan"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="237dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#6E8F00"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D8D8D8"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Code"
                android:textColor="#6E8F00"
                android:textSize="14dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country Code"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D8D8D8"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#6E8F00"
                android:textSize="14dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D8D8D8"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#6E8F00"
                android:textSize="14dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D8D8D8"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Number"
                android:textColor="#6E8F00"
                android:textSize="14dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Number"
                android:textColor="#000"
                android:textSize="14dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D8D8D8"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Make"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvVehicleMake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Make"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Model"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvVehicleModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Model"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year of Manufacture"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvYearOfManufacture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year of Manufacture"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tyre Size"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvTyreSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tyre Size"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insurance Company"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvInsuranceCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insurance Company"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>