<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashActivity">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#6E8F00">

        <android.support.v7.widget.Toolbar
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:navigationIcon="@drawable/ic_arrow_back_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="Choose a payment"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="16dp" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbarLayout"
        android:padding="15dp">
        
        <ImageView
            android:layout_width="37.23dp"
            android:layout_height="19.95dp"
            android:src="@mipmap/cash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:textColor="#000"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="26.56dp"
                android:layout_height="26.67dp"
                android:src="@drawable/check"/>

        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>